# Frontend Dockerfile for Child Growth Assistant
FROM node:18-alpine

WORKDIR /app

# Copy package files (package.json and package-lock.json)
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy application code
COPY . .

# Set environment variable for API URL (will be overridden by docker-compose)
ENV NEXT_PUBLIC_API_URL=http://localhost:8011
ENV NEXT_PUBLIC_WS_URL=ws://localhost:8011

# Expose port
EXPOSE 3082

# Health check
HEALTHCHECK --interval=10s --timeout=3s --start-period=10s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3082 || exit 1

# Run development server
CMD ["npm", "run", "dev"]

